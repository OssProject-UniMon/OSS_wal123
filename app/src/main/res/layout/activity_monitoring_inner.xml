<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        tools:context=".Monitoring_innerActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_margin="22dp"
                    android:background="@drawable/bubble_user"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mi_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="5월 내 소비 분석"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/mi_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="가장 큰 소비 변동"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#313131"/>
                    <LinearLayout
                        android:layout_width="340dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bubble_bogo"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/icon_3"
                                android:scaleType="fitXY" />
                            <LinearLayout
                                android:layout_width="330dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/mi_text10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:text="최고소비 카테고리: 쇼핑"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_text11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전달 대비 22.7% 증가"
                                    android:textSize="20sp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="18dp"
                                android:background="@drawable/icon_4"
                                android:scaleType="fitXY" />
                            <LinearLayout
                                android:layout_width="330dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/mi_text12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="38dp"
                                    android:text="최저소비 카테고리: 음식점"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_text13"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전달 대비 90% 감소"
                                    android:textSize="20sp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mi_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="카테고리별 소비량"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#313131"/>
                    <LinearLayout
                        android:layout_width="340dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bubble_bogo"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/icon_4"
                                android:scaleType="fitXY" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/mi_text14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="11dp"
                                    android:text="음식점"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_text15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="목표금액: ???"
                                    android:textSize="10sp"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_food_bm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="저번달 대비 ???% 증가"
                                    android:textSize="10sp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <ProgressBar
                                    android:id="@+id/foodProgressBar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="20dp"
                                    android:max="100"
                                    android:progress="0"
                                    android:progressTint="#4CAF50"/>
                                <TextView
                                    android:id="@+id/mi_food_p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="80%"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/icon_2"
                                android:scaleType="fitXY" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/mi_text16"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="11dp"
                                    android:text="카페"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_text17"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="목표금액: ???"
                                    android:textSize="10sp"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_cafe_bm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="저번달 대비 ???% 증가"
                                    android:textSize="10sp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            <ProgressBar
                                android:id="@+id/cafeProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="30dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="#FFC107"/>
                                <TextView
                                    android:id="@+id/mi_cafe_p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="80%"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/icon_3"
                                android:scaleType="fitXY" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/mi_text18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="11dp"
                                    android:text="쇼핑"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_text19"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="목표금액: ???"
                                    android:textSize="10sp"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_shop_bm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="저번달 대비 ???% 증가"
                                    android:textSize="10sp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            <ProgressBar
                                android:id="@+id/shoppingProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="30dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="#FF5722"/>
                                <TextView
                                    android:id="@+id/mi_shop_p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="80%"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="330dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/icon_5"
                                android:scaleType="fitXY" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/mi_text20"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="11dp"
                                    android:text="기타"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_text21"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="목표금액: ???"
                                    android:textSize="10sp"
                                    android:textColor="#313131"/>
                                <TextView
                                    android:id="@+id/mi_else_bm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="저번달 대비 ???% 증가"
                                    android:textSize="10sp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                            <ProgressBar
                                android:id="@+id/etcProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="30dp"
                                android:max="100"
                                android:progress="0"
                                android:progressTint="#9C27B0"/>
                                <TextView
                                    android:id="@+id/mi_else_p"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="80%"
                                    android:textSize="10sp"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="#313131"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>